{
  "name": "bgm-tv-hover-more-info",
  "description": "Build your UserScript with webpack",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Trim21",
    "email": "i@trim21.me"
  },
  "browserslist": [
    "chrome >= 86",
    "last 2 edge versions",
    "last 2 firefox versions"
  ],
  "eslintIgnore": [
    "!.babelrc.js",
    "dist/*.js"
  ],
  "scripts": {
    "lint": "run-p lint:* ",
    "format": "run-s -c format:*",
    "lint:eslint": "eslint --ext cjs,js,ts ./",
    "lint:prettier": "prettier --check .",
    "format:eslint": "eslint --fix --ext cjs,js,ts ./",
    "format:prettier": "prettier --write .",
    "anylize": "npm_config_report=true webpack --config config/webpack.config.prod.js",
    "postversion": "git push",
    "build": "webpack --config config/webpack.config.prod.js",
    "dev": "webpack --config config/webpack.config.dev.js",
    "lint-staged": "lint-staged -v",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Trim21/bgm-tv-hover-info"
  },
  "dependencies": {
    "jquery": "3.6.1"
  },
  "lint-staged": {
    "*.{cjs,js,ts,json,yml,yaml}": "prettier --write",
    "*.{cjs,js,ts}": "eslint --fix"
  },
  "devDependencies": {
    "@types/greasemonkey": "4.0.4",
    "@types/jest": "^29.1.1",
    "@types/jquery": "3.5.14",
    "@types/lodash": "4.14.185",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "browserslist": "4.21.3",
    "esbuild": "^0.15.10",
    "esbuild-loader": "^2.20.0",
    "eslint": "8.23.1",
    "eslint-config-standard-with-typescript": "23.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.1",
    "husky": "8.0.1",
    "jest": "^29.1.2",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "4.8.3",
    "userscript-metadata-webpack-plugin": "0.1.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-livereload-plugin": "3.0.2",
    "webpack-merge": "5.8.0"
  }
}

{
  "name": "bgm-tv-hover-more-info",
  "description": "Build your UserScript with webpack",
  "version": "0.0.6",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Trim21",
    "email": "i@trim21.me"
  },
  "browserslist": [
    "chrome >= 86",
    "last 2 edge versions",
    "last 2 firefox versions"
  ],
  "eslintIgnore": [
    "!.babelrc.js",
    "dist/*.js"
  ],
  "scripts": {
    "lint": "run-s lint:* ",
    "format": "run-s -c format:*",
    "lint:eslint": "eslint --ext cjs,js,ts ./",
    "lint:prettier": "prettier --check .",
    "format:eslint": "eslint --fix --ext cjs,js,ts ./",
    "format:prettier": "prettier --write .",
    "anylize": "npm_config_report=true webpack --config config/webpack.config.production.js",
    "postversion": "git push",
    "build": "webpack --config config/webpack.config.production.js",
    "dev": "webpack --config config/webpack.config.dev.js",
    "lint-staged": "lint-staged -v",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Trim21/bgm-tv-hover-info"
  },
  "dependencies": {
    "jquery": "3.6.0"
  },
  "lint-staged": {
    "*.{cjs,js,ts,json,yml,yaml}": "prettier --write",
    "*.{cjs,js,ts}": "eslint --fix"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/plugin-proposal-optional-chaining": "7.16.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@types/greasemonkey": "4.0.2",
    "@types/jquery": "3.5.14",
    "@types/lodash": "4.14.181",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "babel-loader": "8.2.4",
    "browserslist": "4.20.2",
    "eslint": "8.13.0",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "typescript": "4.6.3",
    "userscript-metadata-webpack-plugin": "0.1.1",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2",
    "webpack-livereload-plugin": "3.0.2",
    "webpack-merge": "5.8.0"
  }
}
